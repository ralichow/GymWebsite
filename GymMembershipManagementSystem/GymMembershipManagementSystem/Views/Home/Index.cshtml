    <style>
        /* Reset some default styles */


        body, h1, p, ul {
            margin: 0;
            padding: 0;
        }

        /* Define some basic styles for the page */
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
        }

        /* Style the navigation bar */
        nav {
            background-color: #333;
            color: #fff;
            padding: 10px;
        }

            nav ul {
                list-style-type: none;
                text-align: center;
            }

            nav li {
                display: inline;
                margin-right: 20px;
            }

        /* Style the header image */
        header {
            text-align: center;
            height: 50vh; /* Half the viewport height */
            overflow: hidden; /* Hide overflow content */
        }

            header img {
                width: 100%;
                height: auto;
                position: relative;
                top: 50%; /* Move the image down by 50% of its own height */
                transform: translateY(-50%); /* Center vertically */
            }

        /* Style the company description section */
        .company-description {
            background-color: #fff;
            padding: 20px;
            margin: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        /* Style the classes section */
        .row {
            background-color: #fff;
            padding: 20px;
            margin: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .row h2 {
                font-size: 24px;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            border: 2px solid #000; /* Border style and color */
        }

        th, td {
            border: 1px solid #000; /* Border style and color for cells */
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2; /* Header background color */
        }

        /* Style the footer */
        footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 10px;
        }
    </style>
</head>
