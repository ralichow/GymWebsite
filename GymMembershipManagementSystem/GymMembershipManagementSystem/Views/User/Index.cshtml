@model IEnumerable<GymMembershipManagementSystem.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<style>
    body {
        /* Linear gradient from top (red) to bottom (blue) */
        background: linear-gradient(to bottom, #bcdaea, #15f5e6);
        /* Additional CSS properties for styling */
        width: 100%;
        height: 100%;
        /* Other styles as needed */
    }

    .form-group {
        padding-left: 550px;
    }
</style>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsStaff)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsStaff)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.UserID }) |
            @Html.ActionLink("Details", "Details", new { id=item.UserID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.UserID })
        </td>
    </tr>
}

</table>
